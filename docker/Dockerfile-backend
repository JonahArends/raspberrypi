FROM python:alpine3.19

WORKDIR /raspiProjekt

COPY ./requirements-backend.txt /raspiProjekt/requirements.txt

RUN pip install --upgrade pip && pip install --no-cache-dir --upgrade -r /raspiProjekt/requirements-backend.txt

COPY ./src /raspiProjekt/src

EXPOSE 8000

CMD [ "uvicorn", "src.api.main:app", "--proxy-headers", "--host", "0.0.0.0", "--port", "8000" ]
